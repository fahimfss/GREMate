<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fahim.gremate">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".WordSetActivity" />
        <activity android:name=".NavDrawerActivity" />
        <activity
            android:name=".ListWordsActivity"
            android:parentActivityName=".WordSetActivity" />
        <activity android:name=".ShowWordActivity" />
        <activity
            android:name=".SearchActivity"
            android:theme="@style/MyDialog" />
        <activity android:name=".PracticeActivity" />
        <activity
            android:name=".PracticingActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".EditActivity" />
        <activity android:name=".ListActivity" />
        <activity
            android:name=".ExampleSentencesActivity"
            android:theme="@style/MyDialog" />
        <activity
            android:name=".PreviousQuestionActivity"
            android:theme="@style/MyDialog" />
    </application>

</manifest>