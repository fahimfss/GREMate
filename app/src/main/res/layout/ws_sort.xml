<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBack1"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort By: "
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        />
    <RadioGroup
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp">


        <RadioButton
            android:textColor="@color/darkFore1"
            android:buttonTint="@color/colorPrimary"
            android:id="@+id/timeAdded"
            android:text="Time Added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <RadioButton
            android:textColor="@color/darkFore1"
            android:buttonTint="@color/colorPrimary"
            android:id="@+id/alphabetical"
            android:text="Alphabetical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:textColor="@color/darkFore1"
            android:buttonTint="@color/colorPrimary"
            android:id="@+id/difficulty"
            android:text="Difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort Order: "
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp">
        <RadioButton
            android:textColor="@color/darkFore1"
            android:buttonTint="@color/colorPrimary"
            android:id="@+id/ascending"
            android:text="Ascending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:textColor="@color/darkFore1"
            android:buttonTint="@color/colorPrimary"
            android:id="@+id/descending"
            android:text="Descending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RadioGroup>

</LinearLayout>